package horas_trabalhadas;
import java.util.Scanner;
/**
 *
 * @author Lucas S.Rodrigues
 */
public class Horas_Trabalhadas {

    public static void main(String[] args) {
        // Inicialização do Scanner
        Scanner scanner = new Scanner(System.in);
       
        char turno;
        double horasTrabalhadas, valorHora, salario;

        System.out.print("Digite o seu turno de trabalho (N para Noturno, qualquer outra letra para Diurno): ");
        turno = scanner.next().charAt(0);
                
        System.out.print("Digite a quantidade de horas trabalhadas: ");
        horasTrabalhadas = scanner.nextDouble();
        
        if (turno == 'N' || turno == 'n') {
            valorHora = 45.00;
        } else {
            valorHora = 37.50;
        }
        
        salario = horasTrabalhadas * valorHora;
       
        System.out.printf("O valor do salário é: R$ %.2f%n", salario);
        
       
        scanner.close();
    }
}
