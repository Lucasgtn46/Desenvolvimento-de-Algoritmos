package operacoes_aritmeticas;

/**
 *
 * @author Lucas S.Rodrigues
 */
import java.util.Scanner;

public class Operacoes_Aritmeticas {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

     
        System.out.print("Digite o primeiro número inteiro: ");
        int num1 = sc.nextInt();

        System.out.print("Digite o segundo número inteiro: ");
        int num2 = sc.nextInt();

        
        int soma = num1 + num2;
        int subtracao = num1 - num2;
        int multiplicacao = num1 * num2;

        
        double divisao = 0;
        int resto = 0;

        
        if (num2 != 0) {
            divisao = (double) num1 / num2; // Cast para double para divisão correta
            resto = num1 % num2; // Resto da divisão
        } else {
            System.out.println("Erro: Divisão por zero não é permitida.");
        }

        
        System.out.println("Resultados das operações aritméticas:");
        System.out.println("Soma: " + num1 + " + " + num2 + " = " + soma);
        System.out.println("Subtração: " + num1 + " - " + num2 + " = " + subtracao);
        System.out.println("Multiplicação: " + num1 + " * " + num2 + " = " + multiplicacao);
        
        if (num2 != 0) {
            System.out.printf("Divisão: %.2f%n", divisao);
            System.out.println("Resto da divisão: " + resto);
        }

        sc.close(); 
    }
}
