package cerca;
import java.util.Scanner;
/**
 *
 * @author Lucas S.Rodrigues
 */
    public class Cerca {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Leitura dos lados a e b
        System.out.print("Digite o comprimento do lado a (em metros): ");
        double a = sc.nextDouble();

        System.out.print("Digite o comprimento do lado b (em metros): ");
        double b = sc.nextDouble();

        // Leitura do ângulo C em graus
        System.out.print("Digite o ângulo C (em graus) entre os lados a e b: ");
        double anguloC = sc.nextDouble();

        // Converter ângulo de graus para radianos
        double anguloCRadianos = Math.toRadians(anguloC);

        // Cálculo do lado c usando a Lei dos Cossenos
        double c = Math.sqrt(Math.pow(a, 2) + Math.pow(b, 2) - 2 * a * b * Math.cos(anguloCRadianos));

        // Cálculo do perímetro
        double perimetro = a + b + c;

        // Impressão do resultado
        System.out.printf("O agricultor precisará comprar %.2f metros de cerca para fechar o triângulo.%n", perimetro);

        sc.close(); 
    }
}
